rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow admin to upload to settings, categories, and products folders
    match /{folder}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.token.email == 'admin@swiftshop.com'
                   && (folder == 'settings' || folder == 'categories' || folder == 'products');
    }
  }
}
